<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <h1>Login</h1>
    <form id="loginForm" action="">
        <input type="text" name="username" id="username" placeholder="Username" required><br>
        <input type="password" name="password" id="password" placeholder="Password" required><br>
        <button type="submit">Login</button>
    </form>

    <div id="message"></div> <!-- Thông báo đăng nhập -->

    <script>
        $(document).ready(function () {
            $("#loginForm").on("submit", function (event) {
                event.preventDefault(); // Ngừng form gửi theo cách mặc định

                var username = $("#username").val();
                var password = $("#password").val();

                $.ajax({
                    url: "/api/v1/auth/login", // API đăng nhập
                    type: "POST",
                    data: {
                        username: username,
                        password: password
                    },
                    success: function (response) {
                        if (response.token) {
                            $("#message").text("Login successful! Redirecting...").css("color", "green");
                            // Lưu token vào localStorage hoặc sessionStorage
                            localStorage.setItem("token", response.token);
                            // Chuyển hướng sang trang dashboard
                            setTimeout(function () {
                                window.location.href = "/api/v1/user/test";
                            }, 2000);
                        }
                    },
                    error: function (response) {
                        $("#message").text("Login failed: " + response.responseJSON.message).css("color", "red");
                    }
                });
            });
        });
    </script>
</body>

</html>